# Variables de entorno para PostgreSQL
# Este archivo se usa cuando ejecutas con docker-compose -f docker-compose.postgres.yml

# PostgreSQL Database Configuration
POSTGRES_USER=control_gastos
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_DB=control_gastos
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Database URL completa (generada autom√°ticamente en docker-compose)
# DATABASE_URL=postgresql://control_gastos:change_this_password_in_production@db:5432/control_gastos

# Seguridad JWT
SECRET_KEY=your-generated-secret-key-here

# Control de registro de usuarios
REGISTRATION_ENABLED=true

# Rate limiting
REGISTER_MAX_ATTEMPTS=5
REGISTER_WINDOW_MINUTES=60
LOGIN_MAX_ATTEMPTS=10
LOGIN_WINDOW_MINUTES=15
